<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MenuPrincipal">

    <TextView
        android:id="@+id/saludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/traerBBDD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola"
        />
    <Button
        android:id="@+id/GestorPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#C72020"
        android:text="Gestor de Perfil"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/consultarHorarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#C72020"
        android:text="consultar Horarios"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/GestorModulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#C72020"
        android:text="Gestor Modulos"
        android:layout_marginTop="40dp"

        />
    <Button
        android:id="@+id/CerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#C72020"
        android:text="Cerrar Sesion"
        android:layout_marginTop="40dp"
        />

</LinearLayout>